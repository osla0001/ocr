---
import Layout from "../layouts/Layout.astro";
import Binder from "../components/Binder.astro";
---

<Layout
  title="RESUME"
  meta="Mit CV, der opsummerer min uddannelse og erhvervserfaring"
>
  <h1>Resumé</h1>
  <div class="text">
    <p>
      Søger De indsigt i min <a href="#" class="highlight">erhvervserfaring</a>,
      da er De kommet til rette sted. Denne portfolio vidner om et bredt
      spektrum af <a href="#" class="highlight">faglige kompetencer</a> inden for
      den digitale sfære. Med vægt på æstetisk sans, grundig forfinelse og kompromisløs
      kvalitet afspejles i <a href="#" class="highlight">øvrige projekter</a> en
      vedvarende stræben efter kreativ fortællekunst.
    </p>
    <img src="/assets/lined_paper.png" alt="Paper" class="paper" />
  </div>
</Layout>

<script is:inline>
  document.querySelectorAll(".highlight").forEach((el) => {
    let lastDeg = null;
    el.addEventListener("mouseenter", () => {
      const choices = [-2, 1.5, 3.2];
      let deg;
      do {
        deg = choices[Math.floor(Math.random() * choices.length)];
      } while (deg === lastDeg && choices.length > 1);
      el.style.transform = `rotate(${deg}deg)`;
      lastDeg = deg;
    });
    el.addEventListener("mouseleave", () => {
      el.style.transform = "";
    });
  });
</script>

<style>
  .text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -35%);
    width: 45ch;
    font-family: "Times New Roman", Times, serif;
    font-size: calc(1.5cqw * var(--font-scale));
    font-weight: normal;
    line-height: 1.48;
    text-align: justify;
    color: #c3c2c2;
    padding-bottom: 5%;
  }

  p .highlight {
    font-weight: 600;
    color: #000000;
    opacity: 1;
    transition: transform 0.3s;
    display: inline-block;
    text-decoration: none; /* Fjern understregning */
    cursor: pointer;
    transition: scale 0.3s;
  }

  p .highlight:hover {
    scale: 1.05;
  }

  h1 {
    position: absolute;
    top: 50%;
    left: 33.5%;
    transform: translate(0%, -230%);
    font-size: calc(4cqw * var(--font-scale));
    font-family: roundhand, sans-serif;
    z-index: 1;
  }

  .paper {
    position: absolute;
    width: 40vw; /* bredde følger viewport */
    height: auto;
    background-size: contain;
    box-shadow: 10px 10px 5px 0px rgba(0, 0, 0, 0.24);
    top: 30%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: -1;
  }
</style>
