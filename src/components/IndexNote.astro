<script is:inline>
  document.querySelectorAll(".highlight").forEach((el) => {
    let lastDeg = null;
    el.addEventListener("mouseenter", () => {
      const choices = [-2, 1.5, 3.2];
      let deg;
      do {
        deg = choices[Math.floor(Math.random() * choices.length)];
      } while (deg === lastDeg && choices.length > 1);
      el.style.transform = `rotate(${deg}deg) scale(1.05)`;
      lastDeg = deg;
    });
    el.addEventListener("mouseleave", () => {
      el.style.transform = "";
    });
  });
</script>

