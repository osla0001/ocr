---
import NavNumber from "./NavNumber.astro";
---

<header id="sideHeader" class="expanded">
  <div class="arrow-indicator"><h2>〈</h2></div>
  <div class="burger"><h2>|||</h2></div>
  <img src="/assets/logo.svg" alt="" class="logo" />
  <h1>osçar's Portfolio</h1>
  <div class="line" style="margin-top: 1rem;"></div>

  <div class="menu-content">
    <nav class="main-menu">
      <ul>
        <li><a href="/">Forside</a></li>
        <li><a href="/about">Om mig</a></li>
        <li><a href="/cv">CV</a></li>
      </ul>
    </nav>
    <nav class="secondary-menu">
      <ul>
        <div class="line"></div>
        <li>Projekter:</li>
        <li>
          <a href="/tegnebog" class="number-list">
            <NavNumber number="01" margin="-1px" /><span class="underline"
              >Tegnebog</span
            ></a
          >
        </li>
        <li>
          <a href="/westcoast" class="number-list">
            <NavNumber number="02" /><span class="underline">Westcoast</span></a
          >
        </li>
      </ul>
    </nav>
  </div>

  <div class="bottom">
    <div class="line"></div>
    <div class="flex_row">
      <a href="http://instagram.com/oscarlaursen" class="icon" target="_blank">
        <img src="/icons/instagram.svg" alt="" /></a
      >
      <a
        href="https://www.facebook.com/oscardlaursen"
        class="icon"
        target="_blank"
      >
        <img src="/icons/facebook.svg" alt="" /></a
      >
      <a
        href="https://www.linkedin.com/in/oscar-damsgaard-laursen-68a304257"
        class="icon"
        target="_blank"
      >
        <img src="/icons/linkedin.svg" alt="" /></a
      >
      <a
        href="https://dk.pinterest.com/trestjernekastere/"
        class="icon"
        target="_blank"
      >
        <img src="/icons/pinterest.svg" alt="" /></a
      >
    </div>
  </div>
</header>

<script type="module">
  document.addEventListener("DOMContentLoaded", () => {
    const header = document.getElementById("sideHeader");
    const burger = document.querySelector(".burger");
    let mouseOnHeader = false;

    // Tjek om vi er på mobil
    const isMobile = window.innerWidth <= 800;

    if (isMobile) {
      // På mobil: Start med helt skjult menu
      header.classList.remove("expanded");
      header.classList.add("collapsed");

      // Vis burgermenu og skjul arrow-indicator
      burger.style.display = "flex";
      document.querySelector(".arrow-indicator").style.display = "none";

      // Toggle menu ved klik på burger
      burger.addEventListener("click", () => {
        if (header.classList.contains("collapsed")) {
          header.classList.remove("collapsed");
          header.classList.add("expanded");
        } else {
          header.classList.remove("expanded");
          header.classList.add("collapsed");
        }
      });

      // Luk menu når der klikkes på links
      document.querySelectorAll("nav a").forEach((link) => {
        link.addEventListener("click", () => {
          header.classList.remove("expanded");
          header.classList.add("collapsed");
        });
      });

      // Luk menu når der klikkes udenfor
      document.addEventListener("click", (e) => {
        if (
          !header.contains(e.target) &&
          !burger.contains(e.target) &&
          header.classList.contains("expanded")
        ) {
          header.classList.remove("expanded");
          header.classList.add("collapsed");
        }
      });
    } else {
      // Desktop: Behold det eksisterende hover-script
      let mouseInArea = false;

      function isInRightArea(e) {
        return e.clientX >= window.innerWidth * 0.95;
      }

      function handleMouseMove(e) {
        // Eksisterende desktop kode
        mouseInArea = isInRightArea(e);

        const headerRect = header.getBoundingClientRect();
        mouseOnHeader =
          e.clientX >= headerRect.left &&
          e.clientX <= headerRect.right &&
          e.clientY >= headerRect.top &&
          e.clientY <= headerRect.bottom;

        if (mouseInArea || mouseOnHeader) {
          header.classList.add("expanded");
          header.classList.remove("collapsed");
        } else {
          header.classList.add("collapsed");
          header.classList.remove("expanded");
        }
      }

      window.addEventListener("mousemove", handleMouseMove);

      // Eksisterende mouseenter/mouseleave events
      header.addEventListener("mouseenter", () => {
        mouseOnHeader = true;
        header.classList.add("expanded");
        header.classList.remove("collapsed");
      });

      header.addEventListener("mouseleave", () => {
        mouseOnHeader = false;
        if (!mouseInArea) {
          header.classList.add("collapsed");
          header.classList.remove("expanded");
        }
      });

      // Auto-luk efter sekunder på desktop
      setTimeout(() => {
        if (!mouseInArea && !mouseOnHeader) {
          header.classList.add("collapsed");
          header.classList.remove("expanded");
        }
      }, 1000);
    }
  });
</script>

<style>
  header {
    display: flex;
    flex-direction: column;
    height: 100vh;
    width: 250px;
    position: fixed;
    top: 0;
    right: 0;
    background: white;
    box-shadow: -2px 0 8px rgba(0, 0, 0, 0.05);
    z-index: 1000;
    border-left: 2px solid black;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  header.collapsed {
    transform: translateX(90%);
  }

  header.expanded {
    transform: translateX(0%);
  }

  /* Ny wrapper for menu indhold */
  .menu-content {
    flex: 1; /* Fylder tilgængelig plads */
    overflow-y: auto; /* Scroll hvis indhold er for højt */
    min-height: 0; /* Tillader flex-shrinking */
  }

  nav {
    width: 100%;
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  li,
  a {
    text-decoration: none;
    color: inherit;
    font-family: "Walkway Expand", sans-serif;
    font-size: 1.2rem;
    text-transform: uppercase;
    -webkit-text-stroke: 0.8px black;
    line-height: 1;
  }

  a {
    width: 100%;
    display: block;
  }

  .main-menu li {
    padding: 0.8rem 0 0.5rem 1rem;
    border-bottom: 2px solid black;
  }

  .secondary-menu li {
    padding: 0.8rem 0 0 1rem;
  }

  .secondary-menu {
    height: fit-content;
  }

  .number-list {
    display: flex;
    flex-direction: row;
  }

  .underline {
    text-decoration: underline;
  }

  .logo {
    width: 70%;
    height: auto;
    margin: 4rem auto 0.8rem auto;
    flex-shrink: 0; /* Forhindrer logo i at skrumpe */
  }

  h1 {
    font-family: "Roundhand-Regular";
    text-align: center;
    font-size: 1.6rem;
    line-height: 1rem;
    flex-shrink: 0; /* Forhindrer titel i at skrumpe */
  }

  .line {
    width: 100%;
    height: 2px;
    background-color: black;
    margin-top: 0.2rem;
    flex-shrink: 0;
  }

  .arrow-indicator {
    position: absolute;
    left: -50px;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    align-items: center;
    justify-content: center;
    border: 2px solid black;
    border-radius: 50%;
    opacity: 1;
    transition: opacity 0.4s;
    z-index: 1100;
    background-color: white;
  }

  header.expanded .arrow-indicator {
    opacity: 0;
    transition: opacity 0.3s;
  }

  header.collapsed li {
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.4s;
  }

  header.expanded li {
    opacity: 1;
    pointer-events: auto;
    transition: opacity 0.4s;
  }

  .main-menu li:hover a,
  .secondary-menu li:hover a .underline {
    animation: fontChange 0.5s steps(5) infinite;
  }

  @keyframes fontChange {
    0%,
    19% {
      font-family: "Walkway Expand", sans-serif;
      font-size: 1.2rem;
      font-weight: normal;
      font-style: normal;
      text-transform: uppercase;
      -webkit-text-stroke: 0.8px black;
      line-height: 1;
      letter-spacing: normal;
    }
    20%,
    39% {
      font-family: "vamones", sans-serif;
      font-size: 1.2rem;
      font-weight: normal;
      font-style: normal;
      text-transform: lowercase;
      -webkit-text-stroke: 2px;
      line-height: 1;
      letter-spacing: 0px;
    }
    40%,
    59% {
      font-family: "Arial", sans-serif;
      font-size: 1.2rem;
      font-weight: 900;
      font-style: normal;
      text-transform: uppercase;
      -webkit-text-stroke: 0px;
      line-height: 1;
      letter-spacing: normal;
    }
    60%,
    79% {
      font-family: "Comic Sans MS", "Comic Sans", cursive;
      font-size: 1.2rem;
      font-weight: normal;
      font-style: normal;
      text-transform: lowercase;
      -webkit-text-stroke: 3px black;
      line-height: 1;
      letter-spacing: normal;
    }
    80%,
    100% {
      font-family: Helvetica, sans-serif;
      font-size: 1.2rem;
      font-weight: normal;
      font-style: italic;
      text-transform: lowercase;
      -webkit-text-stroke: 0px;
      line-height: 1;
      letter-spacing: normal;
    }
  }

  .bottom {
    /* Fjernet position: absolute */
    width: 100%;
    min-height: 120px; /* Minimum højde for ikoner */
    display: flex;
    flex-direction: column;
    z-index: 5;
    flex-shrink: 0; /* Forhindrer bottom i at skrumpe */
    margin-top: auto; /* Skubber til bunden af flex container */
  }

  .flex_row {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin: 10% 0;
  }

  .icon {
    width: 40px;
    height: 40px;
    align-content: center;
    place-content: center;
    border: 2px solid black;
    border-radius: 50%;
    opacity: 1;
    transition: 0.3s;
  }

  .icon:hover {
    scale: 1.1;
    transition: 0.3s;
  }

  .icon img {
    width: 65%;
    height: auto;
    margin: 0 auto;
  }

  .flex_row .icon:nth-child(2) img {
    width: 80%;
  }
  .flex_row .icon:nth-child(3) img {
    transform: translate(5%, -5%);
  }
  .flex_row .icon:nth-child(4) img {
    width: 75%;
  }

  .burger {
    display: none;
  }

  @media (max-width: 800px) {
    .arrow-indicator {
      display: none;
    }

    .burger {
      display: block;
      width: 40px;
      height: 40px;
      border: 2px solid black;
      border-radius: 50%;
      opacity: 1;
      transition: opacity 0.4s;
      z-index: 1100;
      background-color: white;
      place-content: center;
      position: absolute;
      left: -50px;
      top: 25px;
      transform: translateY(-50%);
      margin: 10px 0;
    }

    .burger h2 {
      font-family: Helvetica, sans-serif;
      letter-spacing: 0px;
      font-size: 1.2rem;
      font-weight: 100;
      width: fit-content;
      height: fit-content;
      transform: rotate(90deg);
      text-align: center;
      place-self: center;
      cursor: pointer;
      z-index: 1100;
      margin-left: 4px;
    }

    header {
      width: 85vw;
    }

    header.collapsed {
      transform: translateX(100%);
    }
  }
</style>
