<div class="help_container">
  <div class="circle" id="help-circle">
    <h2 id="help-symbol">
      <span class="question-mark">?</span><span class="cross"></span>
    </h2>
  </div>
  <div class="bubble" id="help-bubble">
    <p>
      <slot />
    </p>
  </div>

  <style>
    .help_container {
      position: absolute; /* eller relative, hvis du vil placere den ift. parent */
      left: 2vw;
      top: 33vh;
      width: 10vw; /* justér efter behov */
      height: 10vw; /* justér efter behov */
    }

    h2 {
      font-family: owners-xwide, sans-serif;
      font-size: calc(2cqw * var(--font-scale));
      font-weight: normal;
      font-style: normal;
      text-transform: lowercase;
      letter-spacing: 0px;
      white-space: pre-line;
      text-align: center;
      position: relative;
    }

    .question-mark {
      display: inline-block;
    }

    .cross {
      display: none;
      position: absolute;
      left: 50%;
      top: 50%;
      width: 1.2em;
      height: 1.2em;
      transform: translate(-50%, -50%);
    }

    .cross.active {
      display: inline-block;
    }

    .cross::before,
    .cross::after {
      content: "";
      position: absolute;
      left: 50%;
      top: 50%;
      width: 80%;
      height: 7%;
      background: #222;
      border-radius: 1px;
      transform: translate(-50%, -50%) rotate(45deg);
    }

    .cross::after {
      transform: translate(-50%, -50%) rotate(-45deg);
    }

    .circle {
      position: absolute;
      left: 50%;
      top: 0;
      width: 2.9vw;
      height: 2.9vw;
      display: flex;
      align-items: center;
      justify-content: center;
      border: 2px dotted black;
      border-radius: 50%;
      background-color: white;
      z-index: 1100;
      cursor: pointer;
      transition: 0.3s;
    }

    .circle:hover {
      scale: 1.2;
      transition: 0.3s;
    }

    .bubble {
      position: absolute;
      left: 35%;
      top: -57%; /* placerer boblen over cirklen */
      width: max-content;
      background-color: #fff;
      padding: 10%;
      border-radius: 5px;
      border: 2px solid black;
      text-align: center;
      z-index: 1200;
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.3s;
    }

    .bubble.active {
      opacity: 1;
      pointer-events: auto;
    }

    .bubble::before {
      content: "";
      position: absolute;
      width: 0;
      height: 0;
      top: 100%;
      left: 15%;
      border: 0.75rem solid transparent;
      border-bottom: none;
      border-top-color: #fff;
      filter: drop-shadow(0 2px 0rem rgba(0, 0, 0, 1));
    }

    p {
      font-family: owners-wide, sans-serif;
      font-size: calc(0.8cqw * var(--font-scale));
      line-height: 1.37;
      text-align: left;
    }
  </style>

  <script is:inline>
    const circle = document.getElementById("help-circle");
    const bubble = document.getElementById("help-bubble");
    const symbol = document.getElementById("help-symbol");
    const questionMark = symbol.querySelector(".question-mark");
    const cross = symbol.querySelector(".cross");
    let state = 0; // 0 = ?, 1 = kryds

    circle.addEventListener("click", () => {
      if (state === 0) {
        bubble.classList.add("active");
        questionMark.style.opacity = "0";
        cross.classList.add("active");
        state = 1;
      } else {
        document.querySelector(".help_container").style.display = "none";
      }
    });
  </script>
</div>
